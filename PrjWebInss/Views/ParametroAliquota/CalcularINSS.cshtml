@model PrjWebInss.Models.ParametroAliquota

@{
    ViewData["Title"] = "Calcular INSS";
}

<h1>Calcular INSS</h1>

<div>
    <h4>Dados do funcionário para calculo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Funcionário</label>
            <input type="text" size="100" value="@ViewBag.NomeFuncionario" />
        </dt>
        <dd class="col-sm-10">
            <label>Salário</label>
            <input type="text" size="20" value="@ViewBag.SalarioFuncionario" />
        </dd>
        <dt class = "col-sm-2">
            <label>Data para base do calculo</label>
            <input type="date" size="15" name="data" id="data" />
        </dt>
    </dl>
</div>
<div>
    @Html.ActionLink("Calcular INSS", "CalcularINSS") |
    <a asp-action="Index">Back to List</a>
</div>
